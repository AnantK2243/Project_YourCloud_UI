{
	"semi": true,
	"trailingComma": "none",
	"singleQuote": true,
	"printWidth": 100,
	"tabWidth": 4,
	"useTabs": true,
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"useTabs": true,
				"tabWidth": 4
			}
		},
		{
			"files": "*.md",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}

{
	"name": "user-interface",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"build": "ng build",
		"build:prod": "ng build --configuration production",
		"build:watch": "ng build --watch --configuration development",
		"dev": "npm run build && dotenv -e .env nodemon server.js",
		"dev:watch": "concurrently -n \"Angular,Server\" -c \"cyan,green\" \"npm run build:watch\" \"dotenv -e .env nodemon server.js --ignore dist/ --ignore src/app/\"",
		"dev:backend": "dotenv -e .env nodemon server.js --ignore dist/ --ignore src/app/",
		"start": "npm run dev:watch",
		"prod": "node server.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --clearCache && jest --coverage",
		"test:ci": "jest --clearCache && jest --ci --coverage --watchAll=false",
		"test:unit": "jest tests/unit",
		"test:integration": "jest tests/integration",
		"test:frontend": "vitest --config vitest.config.mjs --run",
		"test:frontend:watch": "vitest --config vitest.config.mjs",
		"test:frontend:coverage": "vitest --config vitest.config.mjs --run --coverage",
		"test:all": "npm run test && npm run test:frontend",
		"test:all:ci": "npm run test:ci && npm run test:frontend:coverage",
		"lint": "eslint server.js src/**/*.js tests/**/*.js --fix",
		"lint:check": "eslint server.js src/**/*.js tests/**/*.js",
		"format": "prettier --write \"**/*.{js,json,md}\"",
		"format:check": "prettier --check \"**/*.{js,json,md}\"",
		"quality:fix": "npm run lint && npm run format",
		"quality:check": "npm run lint:check && npm run format:check && npm run test:all:ci"
	},
	"private": true,
	"overrides": {
		"jsdom": "^25.0.1"
	},
	"dependencies": {
		"@angular/common": "^19.2.14",
		"@angular/compiler": "^19.2.0",
		"@angular/core": "^19.2.0",
		"@angular/forms": "^19.2.0",
		"@angular/platform-browser": "^19.2.0",
		"@angular/platform-browser-dynamic": "^19.2.0",
		"@angular/platform-server": "^19.2.0",
		"@angular/router": "^19.2.0",
		"@angular/ssr": "^19.2.13",
		"@aws-sdk/client-s3": "^3.837.0",
		"@aws-sdk/s3-request-presigner": "^3.837.0",
		"bcryptjs": "^3.0.2",
		"cors": "^2.8.5",
		"dotenv": "^16.6.1",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.1",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
		"jszip": "^3.10.1",
		"mongodb": "^6.16.0",
		"mongoose": "^8.15.1",
		"nodemailer": "^7.0.5",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0",
		"validator": "^13.15.15",
		"ws": "^8.18.2",
		"zone.js": "~0.15.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^19.2.13",
		"@angular/cli": "^18.0.7",
		"@angular/compiler-cli": "^19.2.0",
		"@babel/core": "^7.28.0",
		"@babel/plugin-transform-modules-commonjs": "^7.27.1",
		"@babel/preset-env": "^7.28.0",
		"@types/cors": "^2.8.18",
		"@types/express": "^4.17.22",
		"@types/jest": "^30.0.0",
		"@types/jszip": "^3.4.0",
		"@types/node": "^18.19.104",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"babel-jest": "^30.0.5",
		"concurrently": "^9.2.0",
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.31.0",
		"fast-glob": "^3.3.2",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jsdom": "^25.0.1",
		"mongodb-memory-server": "^10.1.4",
		"nodemon": "^3.1.10",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"supertest": "^7.1.3",
		"tailwindcss": "^3.4.17",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"typescript": "~5.7.3",
		"vitest": "^3.2.4"
	}
}
